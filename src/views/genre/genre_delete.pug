extends ../layout

block content

  h1 #{title}: #{genre.name}

  if genre_books.length

    p #[strong Delete following books attempting before to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Books

      dl

        each book in genre_books

          dt

            a(href=book.url) #{book.title}

          dd #{book.summary}
  else

    p Do you really to delete this genre?

    form(method='POST' action='')

      div.form-group.mt-3

        input#genreid.form-control(type='hidden' name='genreid' value=genre._id required)

      button.btn.btn-primary(type='submit') Delete