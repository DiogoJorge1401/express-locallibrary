extends ../layout

block content

  h1= title

  form.w-75(method='POST' action='')

    div.form-group

      label(for='name') Genre: 

      input#name.form-control(type='text' placeholder='Fantasy, Poetry etc.' name='name' value=(genre === undefined ? '' : genre.name))

      button.btn.btn-primary.mt-3(type='submit') Submit

  if errors
    ul.mt-2
      for error in errors
        li.text-danger #{error.msg}
