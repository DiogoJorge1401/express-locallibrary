extends ../layout

block content
  h1=title

  form.w-75(method='POST' action='')

    div.form-group.mt-3

      label(for='first_name') First Name:

      input#first_name.form-control(type='text' placeholder='First name (Christian)' name='first_name' value=(author === undefined ? '' : author.first_name) )

    div.form-group.mt-3

      label(for='family_name') Family Name:

      input#family_name.form-control(type='text' placeholder='Family name (Surname)' name='family_name' value=(author === undefined ? '' : author.family_name))

    div.form-group.mt-3

      label(for='date_of_birth') Date of birth:

      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(author === undefined ? '' : author.date_of_birth_formatted) )

    div.form-group.mt-3

      label(for='date_of_death') Date of death:

      input#date_of_death.form-control(type='date' name='date_of_death' value=(author === undefined ? '' : author.date_of_death_formatted) )

    button.btn.btn-primary.mt-3(type='submit') Submit

  if errors
    ul.mt-2
      for error in errors
        li.text-danger #{error.msg}